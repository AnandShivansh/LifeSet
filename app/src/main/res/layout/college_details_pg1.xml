<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#444">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College\nDetails"
                android:textStyle="bold"
                android:fontFamily="@font/fiesta"
                android:textSize="80dp"
                android:textColor="#FFF"/>

            <TextView
                android:textColor="#FFF"
                android:id="@+id/collegename_feild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College Name:"
                android:fontFamily="@font/fiesta"
                android:textSize="30dp"/>

            <EditText
                android:textColor="#DDD"
                android:id="@+id/collegename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:fontFamily="@font/fiesta"/>

            <TextView
                android:textColor="#FFF"
                android:id="@+id/collegeyr_feild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College year:"
                android:fontFamily="@font/fiesta"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:textColor="#FFF"
                    android:id="@+id/collegeyr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="25dp"
                    android:fontFamily="@font/fiesta"/>
                <EditText
                    android:textColor="#FFF"
                    android:id="@+id/collegeyr_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:editable="false"
                    android:textSize="25dp"
                    android:fontFamily="@font/fiesta"/>

            </LinearLayout>



        </LinearLayout>
        <GridLayout
            android:layout_below="@+id/collegeyr"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:columnOrderPreserved="false"
            android:layout_marginHorizontal="50dp">


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="10dp"
                android:tag="1"
                android:onClick="pg1"
                app:contentPadding="10dp"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textSize="30dp"
                    android:fontFamily="@font/fiesta"
                    android:textColor="#FFF"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="2"
                android:onClick="pg1"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textSize="30dp"
                    android:fontFamily="@font/fiesta"
                    android:textColor="#FFF"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>


        </GridLayout>
    </LinearLayout>
</ScrollView>