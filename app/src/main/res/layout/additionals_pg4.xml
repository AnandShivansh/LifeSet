<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional\nInfo"
                android:textStyle="bold"
                android:fontFamily="@font/fiesta"
                android:textSize="80dp"/>

            <TextView
                android:id="@+id/cg_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current CG"
                android:fontFamily="@font/fiesta"
                android:layout_below="@+id/heading"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/curr_cg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="numberDecimal"
                android:textSize="20dp"
                android:tag="1"
                android:layout_below="@+id/cg_field"/>

            <TextView
                android:id="@+id/relationship_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relationship"
                android:fontFamily="@font/fiesta"
                android:layout_below="@+id/curr_cg"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:tag="2"
                android:textSize="20dp"
                android:layout_below="@+id/relationship_field"/>

            <TextView
                android:id="@+id/sports_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Sports hours"
                android:fontFamily="@font/fiesta"
                android:layout_below="@+id/relationship"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/sports_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="numberDecimal"
                android:textSize="20dp"
                android:tag="3"
                android:layout_below="@+id/sports_field"/>


        </LinearLayout>
        <GridLayout
        android:layout_below="@+id/sports_hours"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:columnOrderPreserved="false"
        android:layout_marginHorizontal="50dp">


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#666"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="10dp"
            android:tag="1"
            android:onClick="pg4"
            app:contentPadding="10dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="30dp"
                android:fontFamily="@font/fiesta"
                android:textColor="#FFF"
                android:layout_gravity="center"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#666"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:tag="2"
            android:onClick="pg4"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="30dp"
                android:fontFamily="@font/fiesta"
                android:textColor="#FFF"
                android:layout_gravity="center"/>

        </android.support.v7.widget.CardView>


    </GridLayout>
    </LinearLayout>
</ScrollView>