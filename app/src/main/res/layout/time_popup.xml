<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFF"
    app:cardCornerRadius="30sp"
    android:animateLayoutChanges="true"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/starttime"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t1">
            </TimePicker>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set starting time"
                android:textSize="25sp"
                android:fontFamily="@font/fiesta"
                android:textColor="#000"
                android:layout_gravity="center"/>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="10dp"
                android:tag="1"
                app:contentPadding="10dp"
                android:layout_margin="15dp"
                android:onClick="setend">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textSize="20dp"
                    android:fontFamily="@font/fiesta"
                    android:textColor="#FFF"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/endtime"
            android:orientation="vertical"
            android:gravity="center">
            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t2">
            </TimePicker>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set ending time"
                android:textSize="25sp"
                android:fontFamily="@font/fiesta"
                android:textColor="#000"
                android:layout_gravity="center"/>
            <GridLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:columnOrderPreserved="false"
                android:layout_marginHorizontal="50dp"
                android:animateLayoutChanges="true">


                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#000"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="10dp"
                    android:tag="1"
                    android:onClick="setstart"
                    app:contentPadding="10dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:textSize="20dp"
                        android:fontFamily="@font/fiesta"
                        android:textColor="#FFF"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#000"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:tag="2"
                    android:onClick="finalx"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textSize="20dp"
                        android:fontFamily="@font/fiesta"
                        android:textColor="#FFF"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>


            </GridLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/check_final"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="40sp"
                android:textColor="#444"
                android:fontFamily="@font/fiesta"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="30sp"
                android:textColor="#444"
                android:fontFamily="@font/fiesta"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:textColor="#911077"
                android:textSize="30sp"
                android:fontFamily="@font/fiesta"
                android:gravity="center"
                android:id="@+id/showx"
                android:onClick="setstart"
                android:editable="false"/>

            <GridLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:columnOrderPreserved="false"
                android:layout_margin="20dp"
                android:animateLayoutChanges="true">


                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#000"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="10dp"
                    android:tag="1"
                    android:onClick="setstart"
                    android:layout_margin="10dp"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:textSize="25sp"
                        android:fontFamily="@font/fiesta"
                        android:textColor="#FFF"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#000"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:tag="2"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/setx">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:textSize="25sp"
                        android:fontFamily="@font/fiesta"
                        android:textColor="#FFF"
                        android:layout_gravity="center"/>

                </android.support.v7.widget.CardView>


            </GridLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>